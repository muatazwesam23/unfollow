# VPN Tunnel Backend Environment Configuration

# Application
APP_NAME=VPN Tunnel API
APP_VERSION=1.0.0
DEBUG=true

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/vpn_tunnel
DATABASE_ECHO=false

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-make-it-long-and-random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Default Admin Account
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@vpntunnel.com

# Server
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins or * for all)
CORS_ORIGINS=*
